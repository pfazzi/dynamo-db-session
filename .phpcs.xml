<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="PHP_CodeSniffer">
    <description>The coding standard for DynamoDb Session.</description>
    <file>src</file>
    <file>tests</file>

    <rule ref="Doctrine"/>

    <rule ref="Doctrine">
        <exclude name="PSR1.Methods.CamelCapsMethodName"/>
        <exclude-pattern>tests/*</exclude-pattern>
    </rule>

    <rule ref="Doctrine">
        <exclude name="Squiz.NamingConventions.ValidVariableName.NotCamelCaps"/>
        <exclude-pattern>src/DynamoDbSessionHandler.php</exclude-pattern>
    </rule>
</ruleset>